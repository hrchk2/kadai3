<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
          <%= render partial:'layouts/userinfo_newbook',locals: {user: @user,booknew:@booknew} %>
        </div>
      
        <div class="col-md-8 offset-md-1">
            <h1>Books</h1>
              <table class="table">
                <thead>
                    <tr>
                     <th>Title</th>
                     <th>Opinion</th>
                     <th colspan="3"></th>
                    </tr>
                  </thead>
                  
                  <% @books.each do |book| %>
                    <tbody>
                    <tr>
                    <td><%=link_to (image_tag book.user.get_profile_image(100,100)),user_path(book.user.id) %></td>
                    <td><%=link_to book.title,book_path(book.id) %></td>
                    <td><%= book.body %></td>
                    </tr>
                    </tbody>
                  <% end %>
              </table>
        </div>
      </div>    
  </div>
</main>
