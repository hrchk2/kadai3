<html>
<h1>index</h1>


<% if @booknew.errors.any? %>
  <%= @booknew.errors.count %>件のerrorが発生しました
  <ul>
    <% @booknew.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<!--user info-->
<h2>User info</h2>
<tbody>
    <%= image_tag @user.get_profile_image(100,100) %>
    <tr>
        <th>name</th>
        <th><%= @user.name %></th>
    </tr>
    <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
    </tr>
    
    <%= link_to edit_user_path(@user.id),class:"btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
    
</tbody>

<!--投稿フォーム-->
<h1>New book</h1>
<%= form_with model: @booknew do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>

<!--book index-->
   <table>
      <thead>
        <tr>
         <th>Title</th>
         <th>Opinion</th>
         <th colspan="3"></th>
        </tr>
      </thead>
      
      <% @books.each do |book| %>
        <tbody>
        <tr>
          <td><%= link_to image_tag(book.user.get_profile_image(100,100)),user_path(book.user.id) %></td>
          <td><%= link_to book.title,book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        </tbody>
      <% end %>
    </table>
    
</html>