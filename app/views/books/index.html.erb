<html>
<h1>index</h1>


<!--user info-->
<h2>User info</h2>
<tbody>
    <!--img-->
    <%= image_tag @user.get_profile_image(100,100) %>
    <tr>
        <th>name</th>
        <th><%= @user.name %></th>
    </tr>
    <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
    </tr>
</tbody>




<!--投稿フォーム-->
<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>

<!--book index-->
   <table>
      <thead>
        <tr>
         <th>Title</th>
         <th>Opinion</th>
         <th colspan="3"></th>
        </tr>
      </thead>
      
      <% @books.each do |book| %>
        <tbody>
        <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        </tr>
        </tbody>
      <% end %>
    </table>
    
</html>