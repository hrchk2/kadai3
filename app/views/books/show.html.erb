<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render partial:'layouts/userinfo_newbook',locals: {user: @user,booknew:@booknew} %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h1>Book detail</h1>
          <table class="table">
            <td><%=link_to user_path(@book.user.id) do %>
                <%= image_tag(@user.get_profile_image(100,100)) %></br>
                <%= @user.name %>
                <% end %>
            </td>
            <td><%= link_to @book.title,book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            
            <!--自分のページのときは、edit.destroyいる-->
            <% if @book.user == current_user %>
              <td class="btn btn-sm btn-success"><%= link_to "Edit",edit_book_path(@book.id) %></td>
              <td class="btn btn-sm btn-danger ml-5"><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
            <% end %>
          </table>
      </div>
    </div>
  </div>
</main>