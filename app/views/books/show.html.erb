<h1>books詳細ページ</h1>

<h2>User info</h2>
<tbody>
    <%= image_tag @user.get_profile_image(100,100) %>
    <tr>
        <th>name</th>
        <th><%= @user.name %></th>
    </tr>
    <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
    </tr>
    
    <%= link_to "USER EDIT", edit_user_path(@user.id),class:"btn btn-outline-secondary btn-block" %>
    
</tbody>

<!--投稿フォーム-->
<h1>New book</h1>
<%= form_with model: @booknew do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>

<h1>book detail</h1>

  <td><%=link_to user_path(@book.user.id) do %>
      <%= image_tag(@user.get_profile_image(100,100)) %></br>
      <%= @user.name %>
      <% end %>
  </td>
  <td><%= link_to @book.title,book_path(@book.id) %></td>
  <td><%= @book.body %></td>
  
<!--自分のページのときは、edit.destroyいる-->
<% if @book.user == current_user %>
  <td><%= link_to "Edit",edit_book_path(@book.id) %></td>
  <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
<% end %>